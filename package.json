{
  "name": "event-hub-bridge",
  "version": "0.1.0",
  "description": "API gateway and bridge layer for MSR Event Hub platform",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "tsx test src/tests/**/*.test.ts",
    "docker:build": "docker build -t event-hub-bridge:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env event-hub-bridge:latest"
  },
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-keys": "^4.8.0",
    "@azure/keyvault-secrets": "^4.8.0",
    "@azure/msal-node": "^2.15.0",
    "@msr/types": "*",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.17.2",
    "pino-http": "^8.6.1",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
